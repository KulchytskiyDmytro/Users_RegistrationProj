@using System.Drawing
@using Region = WebApplication8.Models.Region
@model WebApplication8.Models.Models.RegisterModel
@{
    ViewBag.Title = "Регістрація";
}
 
<h2>Реєстрація</h2>
<h3>Пориньте у дивовижний світ горил!</h3>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
     
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
 
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
 
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.RegionId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RegionId, ((ViewBag.Regions as List<Region>) ?? new List<Region>()).Select(r=> new SelectListItem
                {
                    Text = r.Name,Value = r.Id.ToString()
                }))
                @Html.ValidationMessageFor(model => model.RegionId)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @type = "email" }})
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Age, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @min="0" } })
                @Html.ValidationMessageFor(model => model.Age)
            </div>
        </div>
 
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зареестурвати" class="btn btn-default" />
            </div>
        </div>
        <div style="margin-bottom: 2%">
            @Html.ActionLink("Маєшь акаунт?", "Login", "Account")
        </div>

    </div>

    <img src="https://img2.joyreactor.cc/pics/post/%D0%B3%D0%B8%D1%84%D0%BA%D0%B8-%D0%B3%D0%BE%D1%80%D0%B8%D0%BB%D0%BB%D0%B0-%D0%BE%D0%B1%D0%B5%D0%B7%D1%8C%D1%8F%D0%BD%D0%B0-%D0%B7%D0%B5%D1%80%D0%BA%D0%B0%D0%BB%D0%BE-7149935.gif"/>

}